<h1>New Game</h1>
<p><%= @letters %></p>
<form action="/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" value=<%= @letters.join('') %> name="letters">
  <input type="hidden" value=<%= @start_time %> name="time">
  <input id="attempt" name= "attempt" type="text" placeholder="Type your attempt">
  <input type="submit" value="Try it!">
</form>